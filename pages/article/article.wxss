/* pages/article/article.wxss */
page{
  background-color: #f6f6f6;
}
.main{
  height: 100%;
  overflow:scroll;
  padding: 18rpx;
  box-sizing: border-box;
}
.article_item{
  width: 100%;
  margin-top: 36rpx;
  font-size: 36rpx;
  text-indent: 87rpx;
  line-height: 66rpx;
  letter-spacing: 6rpx;
  font-weight: bold;
}
.article_title{
  font-size:66rpx;
  font-weight: bold;
  margin: 60rpx 0;
}

.menu{
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100vw;
  height: 200rpx;
  background:#ffffff;
  color:#2b2b2b;
  z-index: 2;
}

.displayflex{
  display: flex;
  flex-direction: row;
  justify-content: space-evenly;
  align-items: center;
}

.displayflex view{
  width: 50%;
  height: 100%;
  text-align: center;
  line-height: 200rpx;
}

.displaynone{
  display: none;
}

.bottom_tab{
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100vw;
  height: 50rpx;
  background:#f6f6f6;
  z-index: 1;
}

.night_model{
  background:#2b2b2b;
  color:#d2d2d2;
}